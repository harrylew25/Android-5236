<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.mobileapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ForumActivity"
            android:label="@string/title_activity_forum"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.mobileapp.MainActivity" />
        </activity>
        <activity
            android:name=".MyQuestionActivity"
            android:label="@string/title_activity_my_question"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.mobileapp.MainActivity" />
        </activity>
        <activity
            android:name=".MyAnswerActivity"
            android:label="@string/title_activity_my_answer" >
        </activity>
        <activity
            android:name=".QAActivity"
            android:label="@string/title_activity_qa"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.mobileapp.MainActivity" />
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.mobileapp.MainActivity" />
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_map"
            android:parentActivityName=".SettingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.mobileapp.SettingActivity" />
        </activity>
        <activity
            android:name=".NotiFreqActivity"
            android:label="@string/title_activity_noti_freq"
            android:parentActivityName=".SettingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.mobileapp.SettingActivity" />
        </activity>
    </application>

</manifest>
